# Add the GeoJSON data to the map
folium.GeoJson(
    arroyos_data,
    name='Arroyos',
    style_function=lambda feature: {
        'fillColor': '#0000ff',
        'color': '#0000ff',
        'weight': 2,
        'dashArray': '5, 5'
    }
).add_to(amba_map)

# Display the map
amba_map
